clean:
	rm -f *.o
	rm -f sacsubf.f
	rm -f sacsubc.c
	rm -fr sacsubc.h
	rm -f grphsubf.f
	rm -f mnmarg.f
	rm -f mgtarg.f
	rm -f mchdep.f
	rm -f lgstr.f
